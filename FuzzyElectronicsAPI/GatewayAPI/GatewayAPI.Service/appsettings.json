{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "yarp": {
    "routes": {
      "CustomersAPI": {
        "clusterId": "CustomersAPI",
        "match": {
          "path": "CustomersAPI/{**catch-all}"
        },
        "transforms": [
          {
            "pathPattern": "{**catch-all}"
          }
        ]
      },
      "OrdersAPI": {
        "clusterId": "OrdersAPI",
        "match": {
          "path": "OrdersAPI/{**catch-all}"
        },
        "transforms": [
          {
            "pathPattern": "{**catch-all}"
          }
        ]
      },
      "ProductsAPI": {
        "clusterId": "ProductsAPI",
        "match": {
          "path": "ProductsAPI/{**catch-all}"
        },
        "transforms": [
          {
            "pathPattern": "{**catch-all}"
          }
        ]
      },
      "ScrapingAPI": {
        "clusterId": "ScrapingAPI",
        "match": {
          "path": "ScrapingAPI/{**catch-all}"
        },
        "transforms": [
          {
            "pathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "clusters": {
      "CustomersAPI": {
        "destinations": {
          "destination1": {
            "address": "https://localhost:7292"
          }
        }
      },
      "OrdersAPI": {
        "destinations": {
          "destination1": {
            "address": "https://localhost:7015"
          }
        }
      },
      "ProductsAPI": {
        "destinations": {
          "destination1": {
            "address": "https://productsapiserv.azurewebsites.net/"
          }
        }
      },
      "ScrapingAPI": {
        "destinations": {
          "destination1": {
            "address": "https://localhost:7047"
          }
        }
      }
    }
  }
}
